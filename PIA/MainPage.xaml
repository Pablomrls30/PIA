<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PIA.MainPage"
             Title="Login" BackgroundColor="AliceBlue">
    <StackLayout VerticalOptions="Center">
        <StackLayout HorizontalOptions="Center">
            <Label Text="Ingresar Datos" TextColor="Black" FontSize="25"/>
        </StackLayout>

        <StackLayout Margin="50,0,50,0">
            <Frame >
                <StackLayout>
                    <Entry Placeholder="Correo" x:Name="txtemail" Text="{Binding txtemail}" TextColor="Black"/>
                    <Entry Placeholder="Password" x:Name="txtclave" Keyboard="Numeric" Text="{Binding txtclave}" TextColor="Black" IsPassword="True"/>
                        <Button Text="Ingresar" FontSize="20" x:Name="Ingresar" Command="{Binding LoginCommand}"
                                BackgroundColor="Blue" TextColor="White" CornerRadius="10"/>
                </StackLayout>
            </Frame>
        </StackLayout>

    </StackLayout>
</ContentPage>

    